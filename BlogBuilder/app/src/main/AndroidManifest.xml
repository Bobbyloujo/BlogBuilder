<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bobbyloujo.blogbuilder"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.BlogBuilderApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.BlogPostListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.BlogPostActivity"
            android:label="@string/title_activity_blog_post"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.EditTextElementActivity"
            android:label="@string/title_activity_edit_text"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.EditPostActivity"
            android:label="@string/title_activity_edit_post"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.EditImageElementActivity"
            android:label="@string/title_activity_edit_image">
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.EditVideoElementActivity"
            android:label="@string/title_activity_edit_video">
        </activity>
        <activity
            android:name="com.bobbyloujo.blogbuilder.activity.BlogSettingsActivity"
            android:label="@string/settings">
        </activity>
    </application>

</manifest>